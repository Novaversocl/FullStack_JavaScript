<h1
  style="margin-top: 20px; text-align: center; color:rgb(5, 47, 216)"
>{{title}}</h1>
{{#if tareas.length}}
  <ul>
    {{#each tareas}}
      <li style="text-align: center; list-style: none">{{id}} - {{titulo}} </li>
    {{/each}}
  </ul>
{{else}}
  <p>No hay tareas para mostrar</p>
{{/if}}